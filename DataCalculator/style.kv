                                on_press:root.power()
                            MDRectangleFlatButton:
                                text:'Log'
                                on_press:root.loga()
                            MDRectangleFlatButton:
                                text:'Clear'
                                text_color:'green'
                                on_press:fpl_.text=''
                            MDRectangleFlatButton:
                                text:'Back'
                                text_color:'white'
                                on_press:mn.current='advanced' 
                            MDRectangleFlatButton:
                                text:'Help'
                                text_color:'blue'
                                on_press:root.help_fpl() 
