# ////////FAKE///////////
        MDScreen:
            name:'advanced'
            MDBoxLayout:
                orientation: 'vertical'
                OneLineIconListItem:
                    text:'Fac!,Pow^,log_a'
                    on_press:root.fpl()
                    size_hint_x:1
                    size_hint_y:(root.height)/5
                    IconLeftWidgetWithoutTouch: 
                        icon:'calculator'
                OneLineIconListItem:
                    text:'a1x+b1y=c1 a2x+b2y=c2'
                    on_press:root.xy() 
                    size_hint_x:1
                    size_hint_y:(root.height)/5
                    IconLeftWidgetWithoutTouch: 
                        icon:'code-not-equal-variant'
                OneLineIconListItem:
                    text:'a1x+b1y+d1z=c1 a2x+b2y+d2z=c2 a3x+b3y+d3z=c3'
                    on_press:root.xyz() 
                    size_hint_x:1
                    size_hint_y:(root.height)/5
                    IconLeftWidgetWithoutTouch: 
                        icon:'equalizer'
                OneLineIconListItem:
                    text:'-123x- -34x+ -45x = 13'
                    on_press:root.x_c() 
                    size_hint_x:1
                    size_hint_y:(root.height)/5
                    IconLeftWidgetWithoutTouch: 
                        icon:'abacus'

